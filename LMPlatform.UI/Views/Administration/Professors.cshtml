@using Application.Core.UI.HtmlHelpers
@using LMPlatform.UI.Controllers
@using Mvc.JQuery.Datatables
@model dynamic

@{
    ViewBag.Title = "Преподаватели";
    Layout = "~/Views/Shared/Layouts/_AdministrationLayout.cshtml";
}

@section title
{
    Преподаватели
}
@section scripts
{
    <script src="~/Scripts/jqplot/jquery.jqplot.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jqplot/jqplot.dateAxisRenderer.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/jqplot/jqplot.canvasTextRenderer.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jqplot/jqplot.cursor.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jqplot/jqplot.highlighter.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jqplot/jqplot.canvasAxisTickRenderer.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.jqplot.min.css" />
    <script type="text/javascript" src="/Scripts/jquery.bootstrap-duallistbox.js"></script>
    <link rel="stylesheet" href="/Content/bootstrap-duallistbox.css" />
}
<div id='professors'>
    @*<div style="margin-bottom: 20px">
        <h4>Список</h4>
    </div>*@
    <div id="buttonActionSection">
        <a href="@Url.Action("AddProfessor", "Administration")" class="addButton btn btn-primary btn-sm">Добавить преподавателя</a>
    </div>
    <div>@Html.Partial("_DataTable", new DataTableViewModel
             {
                 DataTable = Html.DataTable("professorsList", (AdministrationController controller) => controller.GetCollectionLecturers(new DataTablesParam() { })),
                 DataTableOptions = new DataTableOptions
                     {
                         Pagination = false,
                         Searchable = true,
                         Sortable = true,
                         Filterable = true,
                         Info = false,
                         OnComplete = "initLecturerManagement"
                     }
             })
    </div>
</div>

