@model int
<div style="text-align: center;">
    @if (!string.IsNullOrEmpty(ViewBag.StatActionLink))
{
    <a href="@String.Format("{0}/{1}", ViewBag.StatActionLink, Model)" onclick=" return false;" class="statButton" title="Статистика посещения">
        <span class="fa icon-stats fa-2x" style="margin-right: 4px;" />
    </a>
}
    @if (!string.IsNullOrEmpty(ViewBag.EditActionLink))
    {
        <a href="@String.Format("{0}/{1}",ViewBag.EditActionLink,@Model)" data-model-id="@Model" data-toggle="tooltip" class="editButton">
            <span class="fa fa-edit fa-2x" style="margin-right: 4px;" />
        </a>
    }

    @if (!string.IsNullOrEmpty(ViewBag.DeleteActionLink))
    {
        <a href="@String.Format("{0}/{1}",ViewBag.DeleteActionLink,Model)" onclick=" return false;" class="deleteButton" title="Удалить">
            <span class="fa fa-trash-o fa-2x" />
        </a>
    }
</div>
