<tabset>
    <tab heading="Занятость лекторов">
        <select ng-model="$parent.$parent.selectedLecturer" ng-options="lecturer.FullName for lecturer in lecturers" ng-change="onChangeLecturer()" class="form-control" style="margin-top: 15px;"></select>
        
        <table ng-table="lecturerProjectsTableParams" class="table table-bordered table-striped table-condensed" style="margin-top: 25px;">
            <tr ng-repeat="project in $data">
                <td data-title="'Проект'" sortable="'Title'"><a href="/BTS/ProjectManagement/{{project.ProjectId}}">{{project.Title}}</a></td>
                <td data-title="'Роль на проекте'">{{project.UserRole}}</td>
                <td data-title="'Создатель проекта'">{{project.CreatorName}}</td>
            </tr>
        </table>
    </tab>
    <tab heading="Занятость студентов">
        <select ng-model="$parent.$parent.selectedGroup" ng-options="group.GroupName for group in groups" ng-change="onChangeGroup()" class="form-control" style="margin-top: 15px;"></select>
    </tab>
</tabset>